<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_darkest"
    tools:context=".SplashScreenActivity">

<!--<com.sarnava.textwriter.TextWriter-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="0dp"-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
    <androidx.cardview.widget.CardView
        android:id="@+id/splash_cv_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/splash_iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/emoji_rose"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/splash_cv_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/splash_iv_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/emoji_rose"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout1"
        android:layout_centerHorizontal="true">
        <androidx.cardview.widget.CardView
            android:id="@+id/splash_cv_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/splash_iv_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/emoji_rose"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/splash_cv_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/splash_iv_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/emoji_rose"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


        <TextView
            android:id="@+id/splash_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout2"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fontdiner_swanky"
            android:gravity="center"
            android:text="@string/piqtiles"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/splash_tv2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/splash_tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/alex_brush"
            android:gravity="center"
            android:textSize="30sp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/splashProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleY=".1"
        android:padding="0dp"
        android:layout_marginBottom="-7dp"
        android:progressDrawable="@drawable/progress_bar_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>